{
  "name": "ai-pair-programmer",
  "displayName": "AI Pair Programmer",
  "publisher": "Dandeneau LLC",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "*",
    "onView:aiPairProgrammerPanel",
    "onCommand:ai-pair-programmer.start",
    "onCommand:ai-pair-programmer.stop",
    "onCommand:ai-pair-programmer.toggle"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-pair-programmer.start",
        "title": "Start AI Pair Programmer"
      },
      {
        "command": "ai-pair-programmer.stop",
        "title": "Stop AI Pair Programmer"
      },
      {
        "command": "ai-pair-programmer.toggle",
        "title": "Toggle AI Pair Programmer"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiPairProgrammer",
          "title": "AI Pair Programmer",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "aiPairProgrammer": [
        {
          "type": "webview",
          "id": "aiPairProgrammerPanel",
          "name": "AI Pair Programmer"
        }
      ]
    },
    "configuration": {
      "title": "AI Pair Settings",
      "properties": {
        "ai-pair.model": {
          "type": "string",
          "default": "gpt-4o",
          "description": "AI Model to use for code generation.",
          "enum": [
            "gpt-4o",
            "gpt-4o-mini",
            "gpt-3.5-turbo",
            "claude-3-5-sonnet",
            "gemini-1.5-pro",
            "gemini-2"
          ]
        },
        "ai-pair.extension": {
          "type": "string",
          "default": ".java",
          "description": "File extension to target (e.g., .java, .js)."
        },
        "ai-pair.testDir": {
          "type": "string",
          "default": "src/test",
          "description": "Relative path to the test directory."
        },
        "ai-pair.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key."
        },
        "ai-pair.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key."
        },
        "ai-pair.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API key."
        },
        "ai-pair.logLevel": {
          "type": "string",
          "default": "info",
          "description": "Logging level.",
          "enum": [
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ]
        },
        "ai-pair.numRetries": {
          "type": "number",
          "default": 3,
          "description": "Number of retries for code generation."
        }
      }
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^20",
    "@types/vscode": "^1.73.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.11.0"
  },
  "dependencies": {
    "ai-pair": "file:../ai-pair"
  },
  "icon": "images/icon.png"
}
