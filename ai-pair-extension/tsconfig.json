{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"outDir": "dist",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"ai-pair": ["../ai-pair/dist"],
			"ai-pair/types": ["../ai-pair/dist/types"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"dist"
	]
}
